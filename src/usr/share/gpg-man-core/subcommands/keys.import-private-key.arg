source "$UTIL_FOLDER/args.fix-whitespace"
filePath="$1"
if [ ! "$filePath" = "-" ] ; then
	source "$UTIL_FOLDER/file.assert-exists"
	file_assert_exists "$filePath"
else
	filePath="/dev/stdin"
fi
$GPG  --allow-secret-key-import --import "$filePath"

